datExpr.count <- as.data.frame( t(count.data) )

print( datExpr.count[1:5, 1:5] )

#=====================================================================================
#
#  Code Section 1.3
#
#=====================================================================================


gsg.count <- goodSamplesGenes( datExpr.count, verbose = 3 )
gsg.count$allOK

#=====================================================================================
#
#  Code Section 1.4
#
