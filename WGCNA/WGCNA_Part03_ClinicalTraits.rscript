if (!gsg.count$allOK)
{
  # Optionally, print the gene and sample names that were removed:
  if (sum(!gsg.count$goodGenes)>0) 
    printFlush(paste("Removing genes:", paste(names(datExpr.count)[!gsg.count$goodGenes], collapse = ", ")));
